<resources>

    <style name="OutlinedTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/el_buttons_primary</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="borderWidth">0.5dp</item>
        <item name="hintTextColor">@color/el_selected_text_color</item>
        <item name="android:textColorHint">@color/el_selected_text_color</item>
        <item name="errorEnabled">true</item>
        <item name="errorTextColor">@color/el_error_text_color</item>
        <item name="helperTextEnabled">true</item>
        <item name="helperTextTextColor">@color/green</item>
        <item name="errorIconDrawable">@null</item>
        <item name="colorAccent">@color/el_error_text_color</item>
    </style>

    <style name="TextInputEditText" parent="Widget.AppCompat.EditText">
        <item name="android:ellipsize">end</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/el_selected_text_color</item>
        <item name="android:imeOptions">actionNext|flagNoExtractUi</item>
        <item name="android:inputType">textCapCharacters</item>
        <item name="android:saveEnabled">false</item>
    </style>

    <style name="PopRegular">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>
